{
  "name": "@oigroup/lightscript-eslint",
  "version": "2.3.0-alpha.3",
  "description": "LightScript parser for ESLint, based on babel-eslint",
  "main": "index.js",
  "files": [
    "index.js",
    "babylon-to-espree"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lightscript/lightscript-eslint.git"
  },
  "dependencies": {
    "@oigroup/babel-plugin-lightscript": "2.3.0-alpha.3",
    "@oigroup/babylon-lightscript": "2.3.0-alpha.3",
    "babel-code-frame": "^6.22.0",
    "babel-core": "^6.25.0",
    "babel-traverse": "^6.25.0",
    "babel-types": "^6.25.0",
    "babylon": "^6.17.4",
    "lodash": "^4.17.4",
    "lodash.pickby": "^4.6.0"
  },
  "scripts": {
    "bootstrap": "git submodule update --init && cd eslint && npm install",
    "eslint": "cd eslint && mocha -c tests/lib/rules/*.js -r ../eslint-tester.js",
    "test": "npm run lint && npm run test-only",
    "test-only": "mocha",
    "test:debug": "node --inspect --debug-brk node_modules/.bin/_mocha",
    "lint": "eslint index.js babylon-to-espree test",
    "fix": "eslint index.js babylon-to-espree test --fix",
    "preversion": "npm test",
    "changelog": "git log `git describe --tags --abbrev=0`..HEAD --pretty=format:' * %s (%an)' | grep -v 'Merge pull request'"
  },
  "homepage": "http://lightscript.org",
  "license": "MIT",
  "engines": {
    "node": ">=4"
  },
  "bugs": {
    "url": "https://github.com/lightscript/lightscript-eslint/issues"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.1",
    "eslint": "^3.19.0",
    "eslint-config-babel": "^6.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-flowtype": "^2.20.0",
    "espree": "^3.3.1",
    "mocha": "^3.2.0"
  }
}
